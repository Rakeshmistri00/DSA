#include<stdio.h>

int main()
{
    int a[50], size, pos, i;

    printf("Enter size of array: ");
    scanf("%d", &size);

    printf("Enter elements in array:\n");
    for(i = 0; i < size; i++)
    {
        scanf("%d", &a[i]);
    }

    printf("Enter position you want to delete: ");
    scanf("%d", &pos);

    if(pos <= 0 || pos > size)
    {
        printf("Invalid position");
    }
    else
    {
        for(i = pos - 1; i < size - 1; i++)
        {
            a[i] = a[i + 1];
        }
        size--;

        printf("Array after deletion:\n");
        for(i = 0; i < size; i++)
        {
            printf("%d ", a[i]);
        }
    }

    return 0;
}
